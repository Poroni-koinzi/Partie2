{% extends 'base.html.twig' %}

{% block title %}Hello ClientsController!{% endblock %}

{% block body %}
<style>
  .container {
  /* Uniquement centrer le formulaire sur la page */
  margin: 0 auto;
  width: 400px;
  /* Encadré pour voir les limites du formulaire */
  padding: 1em;
  border: 1px solid #CCC;
  border-radius: 1em;
}

form div + div {
  margin-top: 1em;
}

label {
  display: inline-block;
  width: 90px;
  text-align: right;
}

input {
  font: 1em sans-serif;
  width: 300px;
  height: 30px;
  margin-left: 5px;
  box-sizing: border-box;
  border: 1px solid #999;
}

input:focus {
  border-color: #000;
}

select{
  font: 1em sans-serif;
  width: 200px;
  height: 30px;
  box-sizing: border-box;
  border-color: #000;
  border: 1px solid #999;
}
table
{
    border-collapse: collapse;
}
td, th 
{
    border: 1px solid black;
}

.bottom{
   margin-left: 0px;
  width: 200px;
  height: 30px;
  color: white;
  background-color: green;
}

.contain {
  margin: 0 auto;
  width: 800px;
  padding: 1em;
  border: 1px solid #CCC;
  border-radius: 1em;
  margin-top: 30px;
}
.row {
    text-align: center
}
</style>
<div class="row">
    <h1>Bienvenue sur la page d'enregistrement des Clients avec la possibilité de modifier les données d'un client et de supprimer un client !  ✅</h1>
<div class="container">
  <h1 style="margin-left: 20px;"> Le formulaire</h1>
    {{ form_start(form) }}
    {{ form_widget(form.genre) }}
    {{ form_row(form.nom) }}
    {{ form_row(form.prenom) }}
    {{ form_row(form.email) }}
    {{ form_row(form.numero_de_telephone) }}
    {{ form_row(form.ville) }}
    {{ form_row(form.situation) }}
    <br /> <br />
    {{ form_widget(form.valider, {'attr': {'class': 'bottom'}}) }}
    {{ form_end(form) }}
</div>
<div class="contain">
<h2>
  Voici la liste des clients enregistré avec la possibilé de modifier les données d'un client ou de Supprimer un client
</h2>
<table>
    <thead>
        <tr>
            <th colspan="1">Genre</th>
            <th colspan="1">Nom</th>
            <th colspan="1">Prenom</th>
            <th colspan="1">Email</th>
            <th colspan="1">Numéro</th>
            <th colspan="1">Ville</th>
            <th colspan="1">Situation</th>
            <th colspan="1">Action</th>
        </tr>
    </thead>
    <tbody>
      {% for client in clients %}   
        <tr>
            <td>{{ client.genre }}</td>
            <td>{{ client.nom }}</td>
            <td>{{ client.prenom }}</td>
            <td>{{ client.email }}</td>
            <td>{{ client.numerodetelephone }}
            <td>{{ client.ville }}</td>
            <td>{{ client.situation }}</td>
            <td> <a href="/clients/{{ client.id }}"> Modifier</a> <a href="/clients/delete/{{ client.id }}">Supprimer</a> </td>
        </tr>         
      {% endfor %}
    </tbody>
</table>
</div>
</div>
{% endblock %}
